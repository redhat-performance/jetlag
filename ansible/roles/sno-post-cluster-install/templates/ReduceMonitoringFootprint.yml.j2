---
apiVersion: v1
kind: ConfigMap
metadata:
  name: cluster-monitoring-config
  namespace: openshift-monitoring
data:
  config.yaml: |
    grafana:
      enabled: false
    alertmanagerMain:
      enabled: false
{% if openshift_version is version('4.14', ">=") %}
    telemeterClient:
      enabled: false
{% endif %}
    prometheusK8s:
       retention: 24h
