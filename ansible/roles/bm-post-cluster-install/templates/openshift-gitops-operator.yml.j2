{% if setup_openshift_gitops_ztp %}
---
apiVersion: v1
kind: Namespace
metadata:
  name: openshift-gitops
{% endif %}
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: openshift-gitops-operator
  namespace: openshift-operators
spec:
  name: openshift-gitops-operator
  sourceNamespace: openshift-marketplace
{% if setup_openshift_gitops_ztp %}
  installPlanApproval: Manual
  startingCSV: {{ gitops_starting_csv }}
{% else %}
  installPlanApproval: Automatic
{% endif %}
{% if use_disconnected_registry | default(false) %}
  source: {{ operator_index_name }}
{% if openshift_version == "4.10" %}
  channel: "4.9"
{% else %}
  channel: stable
{% endif %}
{% elif openshift_version == "4.10" %}
  source: redhat-operators-4-9
  channel: "4.9"
{% else %}
  source: redhat-operators
  channel: stable
{% endif %}
