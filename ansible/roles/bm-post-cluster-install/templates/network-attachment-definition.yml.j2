apiVersion: k8s.cni.cncf.io/v1
kind: NetworkAttachmentDefinition
metadata:
  name: {{ net_attach_def_name }}
  namespace: {{ net_attach_def_namespace }}
spec:
  config: |-
    {
      "cniVersion": "0.3.1",
      "name": "{{ net_attach_def_name }}",
      "type": "macvlan",
      "master": "{{ net_attach_def_interface }}",
      "mode": "bridge",
      "ipam": {
        "type": "whereabouts",
        "range": "{{ net_attach_def_range }}"
      }
    }
