networking:
  networkType: {{ networktype }}
{% if use_disconnected_registry | default(false) %}
imageContentSources:
- mirrors:
  - {{ disconnected_registry_host }}:{{ disconnected_registry_port }}/ocp4/openshift4
  source: quay.io/openshift-release-dev/ocp-release
- mirrors:
  - {{ disconnected_registry_host }}:{{ disconnected_registry_port }}/ocp4/openshift4
  source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
- mirrors:
  - {{ disconnected_registry_host }}:{{ disconnected_registry_port }}/edge-infrastructure
  source: quay.io/edge-infrastructure
additionalTrustBundle: |
  {{ mirror_cert.content | b64decode | indent(width=2) }}
{% endif %}
